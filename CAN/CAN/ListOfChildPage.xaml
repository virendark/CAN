        <FABControls:ImageButton x:Name="btnAdd" Source="IconFAB.png" ItemTapped="ImageButton_ItemTapped"
                                         AbsoluteLayout.LayoutFlags="PositionProportional"
                                        AbsoluteLayout.LayoutBounds="1.0,1.0,-1,-1"
                                        Margin="10" />
    </AbsoluteLayout>

</ContentPage>